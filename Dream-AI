    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>
    <script>
        // ========== CONFIGURATION ==========n        const CONFIG = {
            ZAPIER_WEBHOOK_URL: "YOUR_ZAPIER_WEBHOOK_URL_HERE", // Replace in Step 11n            TAMIL_NADU_CENTER: [10.7915, 79.1378],
            DEFAULT_ZOOM: 7,
            MAP_TILES: 'https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png'n        };

        // ========== GLOBAL VARIABLES ==========n        let currentLanguage = 'ta';
        let map = null;
        let markers = [];
        let currentItinerary = null;
        let voiceRecognition = null;

        // ========== INITIALIZATION ==========n        document.addEventListener('DOMContentLoaded', function() {
            initMap();
            updateDurationValue();

            // Initialize voice recognition if availablen            if ('webkitSpeechRecognition' in window) {
                voiceRecognition = new webkitSpeechRecognition();
                voiceRecognition.continuous = false;
                voiceRecognition.interimResults = false;
                voiceRecognition.lang = 'ta-IN';

                voiceRecognition.onresult = function(event) {
                    const transcript = event.results[0][0].transcript;
                    document.getElementById('dreamInput').value = transcript;
                };
            }
        });

        // ========== MAP FUNCTIONS ==========n        function initMap() {
            map = L.map('map').setView(CONFIG.TAMIL_NADU_CENTER, CONFIG.DEFAULT_ZOOM);
            L.tileLayer(CONFIG.MAP_TILES, {
                attribution: '¬© OpenStreetMap contributors'n            }).addTo(map);
        }

        function addMarkers(locations) {
            // Clear existing markersn            markers.forEach(marker => map.removeLayer(marker));
            markers = [];

            // Add new markersn            locations.forEach((loc, index) => {
                const marker = L.marker([loc.lat, loc.lng])
                    .addTo(map)
                    .bindPopup(`<b>${index + 1}. ${loc.name}</b><br>${loc.description || ''}`);
                markers.push(marker);
            });

            // Fit bounds to show all markersn            if (locations.length > 0) {
                const group = new L.featureGroup(markers);
                map.fitBounds(group.getBounds().pad(0.1));
            }
        }

        // ========== LANGUAGE FUNCTIONS ==========n        function setLanguage(lang) {
            currentLanguage = lang;
            document.querySelectorAll('.lang-btn').forEach(btn => btn.classList.remove('active'));
            event.target.classList.add('active');

            if (lang === 'voice') {
                toggleVoiceInput();
            }
        }

        function toggleVoiceInput() {
            if (!voiceRecognition) {
                alert('Voice input not supported in your browser');
                return;
            }

            voiceRecognition.lang = currentLanguage === 'ta' ? 'ta-IN' : 'en-IN';
            voiceRecognition.start();

            // Show recording indicatorn            const input = document.getElementById('dreamInput');
            input.placeholder = 'üé§ Listening... Speak now...';
            setTimeout(() => {
                input.placeholder = currentLanguage === 'ta'n                    ? '‡Æâ‡Æô‡Øç‡Æï‡Æ≥‡Øç ‡Æï‡Æ©‡Æµ‡ØÅ‡Æ™‡Øç ‡Æ™‡ÆØ‡Æ£‡Æ§‡Øç‡Æ§‡Øà ‡Æµ‡Æø‡Æµ‡Æ∞‡Æø‡Æï‡Øç‡Æï‡Æµ‡ØÅ‡ÆÆ‡Øç...'
                    : 'Describe your dream trip in English...';
            }, 3000);
        }

        // ========== EXAMPLE FUNCTIONS ==========n        function useExample(num) {
            const examples = {
                1: "‡ÆÖ‡ÆÆ‡Øà‡Æ§‡Æø‡ÆØ‡Ææ‡Æ© ‡Æï‡Øã‡Æµ‡Æø‡Æ≤‡Øç, ‡Æï‡ØÅ‡Æ≥‡Æø‡Æ∞‡Øç ‡Æï‡Ææ‡Æ±‡Øç‡Æ±‡ØÅ, ‡Æ™‡Æ¥‡ÆÆ‡Øà‡ÆØ‡Ææ‡Æ© ‡Æï‡Æü‡Øç‡Æü‡Æø‡Æü‡Æï‡Øç‡Æï‡Æ≤‡Øà",
                2: "Blue mountains with morning mist and tea plantations",
                3: "Ancient temple at golden hour with traditional music",
                4: "‡Æö‡ØÅ‡Æ±‡Øç‡Æ±‡ØÅ‡Æ≤‡Ææ ‡Æµ‡Æø‡Æ∞‡ØÅ‡Æ®‡Øç‡Æ§‡ØÅ ‡ÆÆ‡Æ±‡Øç‡Æ±‡ØÅ‡ÆÆ‡Øç ‡Æ®‡Æü‡Æ©‡ÆÆ‡Øç, ‡Æï‡Æø‡Æ∞‡Ææ‡ÆÆ‡Æø‡ÆØ ‡Æï‡Æ≤‡Øà‡Æï‡Æ≥‡Øç"n            };
            document.getElementById('dreamInput').value = examples[num];
        }

        function clearInput() {
            document.getElementById('dreamInput').value = '';
        }

        function toggleAdvanced() {
            const adv = document.getElementById('advancedOptions');
            adv.style.display = adv.style.display === 'none' ? 'block' : 'none';
        }

        function updateDurationValue() {
            const slider = document.getElementById('durationSlider');
            const value = document.getElementById('durationValue');
            value.textContent = `${slider.value} day${slider.value > 1 ? 's' : ''}`;n        }

        // ========== MAIN AI FUNCTION ==========n        async function generateTrip() {
            const userInput = document.getElementById('dreamInput').value.trim();

            if (!userInput) {
                alert('Please describe your dream trip first!');
                return;
            }

            // Show loadingn            document.getElementById('loading').style.display = 'block';
            document.getElementById('resultsSection').style.display = 'none';

            // Show analyzing textn            const analyzingText = document.getElementById('analyzingText');
            const phrases = [
                "Understanding Tamil language context...",
                "Checking Tamil Nadu festival calendar...",
                "Calculating optimal carbon-efficient routes...",
                "Analyzing SETC bus schedules...",
                "Finding authentic local experiences..."n            ];
            let i = 0;
            const interval = setInterval(() => {
                analyzingText.textContent = phrases[i % phrases.length];
                i++;
            }, 2000);

            try {
                // Get user preferencesn                const duration = document.getElementById('durationSlider').value;
                const budget = document.getElementById('budgetSelect').value;
                const carbonPref = document.getElementById('carbonSelect').value;

                // Prepare data for Zapiern                const tripData = {
                    user_input: userInput,
                    language: currentLanguage,
                    duration_days: parseInt(duration),
                    budget_level: budget,
                    carbon_preference: carbonPref,
                    timestamp: new Date().toISOString(),
                    features: ['tamil_nlp', 'carbon_calc', 'festival_aware', 'local_transport']n                };

                // ========== ZAPIER INTEGRATION ==========n                // REPLACE THIS URL WITH YOUR ACTUAL ZAPIER WEBHOOK URLn                const ZAPIER_URL = CONFIG.ZAPIER_WEBHOOK_URL;

                const response = await fetch(ZAPIER_URL, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify(tripData)
                });

                if (!response.ok) {
                    throw new Error(`Zapier error: ${response.status}`);
                }

                const aiResponse = await response.json();

                // ========== FOR DEMO (If Zapier not configured) ==========n                // Remove this block when Zapier is connectedn                if (!aiResponse || aiResponse.error) {
                    console.log("Using demo data (Zapier not configured)");
                    currentItinerary = getDemoItinerary(userInput, duration, budget);
                } else {
                    currentItinerary = aiResponse;
                }

                clearInterval(interval);
                document.getElementById('loading').style.display = 'none';

                // Display resultsn                displayResults(currentItinerary);

            } catch (error) {
                console.error('Error:', error);
                clearInterval(interval);
                document.getElementById('loading').style.display = 'none';

                // Show demo data if API failsn                currentItinerary = getDemoItinerary(userInput);
                displayResults(currentItinerary);

                alert('Note: Connected to demo mode. Connect Zapier for real AI processing!');
            }
        }

        // ========== RESULTS DISPLAY ==========n        function displayResults(data) {
            // Update statsn            document.getElementById('totalCost').textContent = `‚Çπ${data.total_cost || 4200}`;n            document.getElementById('carbonFootprint').textContent = `${data.carbon_footprint || 28.5} kg`;
            document.getElementById('destinationCount').textContent = `${data.destinations_count || 5} Places`;
            document.getElementById('tripDuration').textContent = `${data.duration_days || 3} Days`;

            // Update carbon metern            const carbonPercent = Math.min(100, (data.carbon_efficiency || 65));
            document.getElementById('carbonBar').style.width = `${carbonPercent}%`;
            document.getElementById('carbonEfficiency').textContent = `${100 - carbonPercent}% greener`;
            document.getElementById('carbonEfficiency').style.color = carbonPercent <= 30 ? '#4CAF50' :
                                                                     carbonPercent <= 60 ? '#FFC107' : '#F44336';

            // Update mapn            if (data.locations && Array.isArray(data.locations)) {
                addMarkers(data.locations);
            }

            // Update itineraryn            const itineraryDays = document.getElementById('itineraryDays');
            itineraryDays.innerHTML = '';

            if (data.itinerary && data.itinerary.days) {
                data.itinerary.days.forEach((day, index) => {
                    const dayCard = document.createElement('div');
                    dayCard.className = 'day-card';
                    dayCard.innerHTML = `
                        <h3>üìÖ Day ${index + 1}: ${day.title || 'Exploring Tamil Nadu'}</h3>
                        <div class="activities">
                            ${(day.activities || []).map(activity => `
                                <div class="activity">
                                    <span class="time-badge">${activity.time || 'Morning'}</span>
                                    <span class="activity-desc">${activity.description || 'Activity'}</span>
                                    ${activity.carbon ? `<span class="carbon-badge">üåø ${activity.carbon} kg</span>` : ''}
                                    ${activity.transport ? `<img src="https://cdn-icons-png.flaticon.com/512/3097/3097140.png" class="transport-icon" title="${activity.transport}">` : ''}
                                </div>
                            `).join('')}
                        </div>
                    `;
                    itineraryDays.appendChild(dayCard);
                });
            }

            // Show results sectionn            document.getElementById('resultsSection').style.display = 'block';
            window.scrollTo({ top: document.getElementById('resultsSection').offsetTop - 100, behavior: 'smooth' });n        }

